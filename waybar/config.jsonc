// r4ppz
{
	// General Waybar configuration
	"opacity": 0.5,
	// "layer": "top",
	"height": 21,
	"spacing": 0,
	"margin-top": 0,
	"margin-right": 0,
	"margin-left": 0,
	// Module placement
	"modules-left": [
		"sway/workspaces",
		"hyprland/workspaces",
		"mpris"

	],
	"modules-center": [
		"custom/weather",
		"clock",
		"custom/dnd",
		"temperature"
	],
	"modules-right": [
		"custom/powerprofile",
		"custom/hyprpicker",
		"bluetooth",
		"pulseaudio",
		"backlight",
		"network",
		"battery",
		"custom/power-button"
	],

	// -------------------------------------------------------------------------
	// Modules configuration
	// -------------------------------------------------------------------------
	// MPRIS module - Dynamic media player
	"mpris": {
		"format": "{player_icon} {dynamic}",
		"format-paused": "{status_icon} {dynamic}",
		"title-len": 25,
		"artist-len": 20,
		"album-len": 15,
		"dynamic-len": 45,
		"dynamic-order": [
			"title",
			"artist",
			"album"
		],
		"dynamic-importance-order": [
			"title",
			"artist",
			"album"
		],
		"dynamic-separator": " ‚Ä¢ ",
		"ellipsis": "‚Ä¶",
		"tooltip": true,
		"tooltip-format": "Player: {player}\nStatus: {status}\nTitle: {title}\nArtist: {artist}\nAlbum: {album}\nPosition: {position}/{length}",
		"player-icons": {
			"default": "<span color='#689d6a'>‚ô™</span>",
			"spotify": "<span color='#1db954'></span>",
			"mpv": "<span color='#458588'></span>",
			"vlc": "<span color='#ff8800'>üé¨</span>",
			"firefox": "<span color='#ff7139'></span>",
			"chromium": "<span color='#4285f4'></span>",
			"chrome": "<span color='#4285f4'></span>"
		},
		"status-icons": {
			"playing": "<span color='#98971a'>‚ñ∂</span>",
			"paused": "<span color='#d79921'>‚è∏</span>",
			"stopped": "<span color='#cc241d'>‚èπ</span>"
		},
		"ignored-players": [],
		"on-click": "playerctl play-pause",
		"on-click-right": "playerctl next",
		"on-click-middle": "playerctl previous",
		"on-scroll-up": "playerctl next",
		"on-scroll-down": "playerctl previous"
	},
	"network": {
		"format": "Ôá´ ",
		"format-wifi": "Ôá´ ",
		"format-ethernet": "{ipaddr}/{cidr} Û∞äó",
		"format-disconnected": "", //An empty format will hide the module.
		"tooltip-format": "{ifname} via {gwaddr} Û∞äó",
		"tooltip-format-wifi": "{essid} ({signalStrength}%) ",
		"tooltip-format-ethernet": "{ifname} ",
		"tooltip-format-disconnected": "Disconnected",
		"max-length": 50,
		"on-click": "~/.config/waybar/scripts/wifi.sh"
	},
	"bluetooth": {
		"format": "Ôäî",
		"format-disabled": "", // an empty format will hide the module
		"format-connected": "Ôäì",
		"tooltip": false,
		"tooltip-format": "{controller_alias}\t{controller_address}",
		"tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{device_enumerate}",
		"tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
		"on-click": "~/.config/waybar/scripts/blue.sh"
	},
	// Hyprland Workspaces module
	"hyprland/workspaces": {
		"active-only": false,
		"all-outputs": true,
		"warp-on-scroll": false,
		"format": "{icon}",
		"format-icons": {
			"1": "I",
			"2": "II",
			"3": "III",
			"4": "IV",
			"5": "V",
			"6": "VI",
			"7": "VII",
			"8": "VIII",
			"9": "IX",
			"10": "X"
		},
		"persistent-workspaces": {
			"*": 5
		},
		"on-scroll-up": "hyprctl dispatch workspace e+1",
		"on-scroll-down": "hyprctl dispatch workspace e-1"
	},
	// System Tray module
	"tray": {
		"icon-size": 12,
		"spacing": 8
	},
	// Disk module (commented out in modules-right)
	"disk": {
		"format": " Û∞£Ü  {free}",
		"interval": 20
	},
	// CPU module
	"cpu": {
		"format": " Ôãõ {usage}%",
		"tooltip": true,
		"tooltip-format": "CPU Usage: {usage}%",
		"interval": 2
	},
	// Memory module
	"memory": {
		"format": "ÓøÖ  {used} GiB ({percentage}%)",
		"tooltip": false,
		"interval": 10,
		"on-click-right": "kitty -e btop"
	},
	// Temperature module
	"temperature": {
		"tooltip": false,
		"thermal-zone": 6,
		"critical-threshold": 70,
		"interval": 2,
		"format": "-> Ôãä {temperatureC}¬∞C",
		"format-critical": " Ó∏ï  {temperatureC}¬∞C"
	},
	// Backlight module
	"backlight": {
		// "device": "acpi_video1",
		"format": "{icon} {percent}%",
		"format-icons": [
			"Û∞Éö", // 0-14%
			"Û∞Éõ", // 15-29%
			"Û∞Éú", // 30-44%
			"Û∞Éù", // 45-59%
			"Û∞Éû", // 60-74%
			"Û∞Éü", // 75-89%
			"Û∞É†" // 90-100%
		],
		"on-scroll-up": "brightnessctl set +1%",
		"on-scroll-down": "brightnessctl set 1%-",
		"smooth-scrolling-threshold": 1,
		"tooltip": false,
		"tooltip-format": "Brightness: {percent}%"
	},
	// PulseAudio module
	"pulseaudio": {
		"scroll-step": 1,
		"format": "{icon} {volume}%",
		"format-muted": "<span color='#cc241d'>Û∞ùü</span> {volume}%",
		"format-bluetooth": "<span color='#458588'>Û∞Ç∞</span> {volume}%",
		"format-bluetooth-muted": "<span color='#cc241d'>Û∞Ç≤</span> {volume}%",
		"format-source": "<span color='#458588'>Û∞ç¨</span> {volume}%",
		"format-source-muted": "<span color='#cc241d'>Û∞ç≠</span>",
		"format-icons": {
			"headphone": "<span color='#458588'>Û∞ãã</span>",
			"headset": "<span color='#458588'>Û∞ãé</span>",
			"phone": "<span color='#458588'>Û∞è≤</span>",
			"portable": "<span color='#458588'>Û∞¶•</span>",
			"car": "<span color='#458588'>Û∞Ñã</span>",
			"default": [
				"<span color='#458588'>Û∞ïø</span>",
				"<span color='#458588'>Û∞ñÄ</span>",
				"<span color='#458588'>Û∞ïæ</span>"
			]
		},
		"on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle",
		"on-click-right": "pavucontrol",
		"on-scroll-up": "pactl set-sink-volume @DEFAULT_SINK@ +1%",
		"on-scroll-down": "pactl set-sink-volume @DEFAULT_SINK@ -1%",
		"tooltip": false,
		"tooltip-format": "{desc} - {volume}%",
		"max-volume": 130
	},
	// Battery module
	"battery": {
		"interval": 10,
		"states": {
			"good": 99,
			"warning": 30,
			"critical": 20
		},
		"format-icons": [
			"Û∞Çé",
			"Û∞Å∫",
			"Û∞Åª",
			"Û∞ÅΩ",
			"Û∞Åæ",
			"Û∞Åø",
			"Û∞ÇÄ",
			"Û∞ÇÅ",
			"Û∞ÇÇ",
			"Û∞Åπ"
		],
		"format": "<span color='#cccccc'>{icon}</span>{capacity}%",
		"format-critical": "<span color='#cc241d'>{icon}</span>{capacity}%!!",
		"format-warning": "<span color='#d79921'>{icon}</span>{capacity}%",
		"format-full": "<span color='#98971a'>{icon}</span>{capacity}%",
		"format-charging": "<span color='#98971a'>Û∞ÇÖ </span>{capacity}%",
		"format-charging-warning": "<span color='#d79921'>Û∞¢ù </span> {capacity}%",
		"format-charging-critical": "<span color='#cc241d'>Û∞¢ú </span>{capacity}%",
		"format-plugged": "<span color='#98971a'>Û∞ÇÖ </span>{capacity}%",
		"format-alt": "<span color='#98971a'>Û±ß• </span> {time}",
		"tooltip": false
	},
	// Clock module
	"clock": {
		// "timezone": "America/New_York",
		"format": "<span color='#ffffff'></span>{:%a %d %b %I:%M:%S %p}",
		"format-alt": "<span color='#ffffff'></span>{:%Y-%m-%d}",
		"tooltip": true,
		"tooltip-format": "<tt><small>{calendar}</small></tt>",
		// "on-click": "gsimplecal",
		"on-click-right": "gsimplecal",
		"interval": 1
	},
	// Custom Power Button module
	"custom/power-button": {
		"format": "ÔÄë ",
		"on-click": "~/.config/waybar/scripts/powermenu.sh", // Rofi
		"tooltip": false
	},
	// Custom Web Links module (commented out in modules-left)
	"custom/hyprpicker": {
		"format": "ÔÅõ ",
		"tooltip": false,
		"on-click": "hyprpicker -a"
	},
	"custom/dnd": {
		"exec": "~/.config/waybar/scripts/dnd.sh status",
		"return-type": "json",
		"interval": 5,
		"on-click": "~/.config/waybar/scripts/dnd.sh toggle",
		"signal": 8
	},
	"power-profiles-daemon": {
		"format": " {icon} ",
		"tooltip-format": "Power profile: {profile}\nDriver: {driver}",
		"tooltip": true,
		"format-icons": {
			"default": "ÔÉß ",
			"performance": "ÔÉß ",
			"balanced": "Ôâé ",
			"power-saver": "ÔÅ¨ "
		}
	},
	"custom/powerprofile": {
		"format": "{}",
		"return-type": "json",
		"exec": "~/.config/waybar/scripts/pprofile.sh",
		"on-click": "~/.config/waybar/scripts/pprofile.sh cycle",
		"interval": 5,
		"tooltip": true,
		"tooltip-format": "Click to cycle power profiles"
	},
		"sway/workspaces": {
		"active-only": false,
		"all-outputs": true,
		"warp-on-scroll": false,
		"format": "{icon}",
		"format-icons": {
			"1": "I",
			"2": "II",
			"3": "III",
			"4": "IV",
			"5": "V",
			"6": "VI",
			"7": "VII",
			"8": "VIII",
			"9": "IX",
			"10": "X"
		},
		"persistent-workspaces": {
			"*": 5
		},
		"on-scroll-up": "hyprctl dispatch workspace e+1",
		"on-scroll-down": "hyprctl dispatch workspace e-1"
	},
"ext/workspaces": {
    "format": "{icon}",
    "ignore-hidden": true,
    "on-click": "activate",
    "on-click-right": "deactivate",
    "sort-by-id": true
  },

"custom/weather": {
    "format": "{}",
    "exec": "~/.config/waybar/scripts/weather.sh Mathura",
    "interval": 200,          // Update every 15 minutes
    "return-type": "json",    // Script returns JSON
    "tooltip": true,          // Enable tooltip display
}

}
